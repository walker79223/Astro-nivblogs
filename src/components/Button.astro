---
export interface Props{
    text:string;
}
const { text } = Astro.props;
---


    <button id="btn" class="btn">{text}</button>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap');
    *{
        font-family: 'Montserrat', sans-serif;
        letter-spacing: 2px;
        background-color: var(--primary-color);
    }
    .btn{
        width: 230px;
        height: 60px;
        border: none;
        color: white;
        background-color: var(--primary-color);
        border-radius: 4px;
        box-shadow: inset 0 0 0 0 #00ffe5;
        transition: ease-out 0.5s;
        font-size: 20px;
        outline: none;

    }

    .btn:hover{
        box-shadow: inset 300px 0 0 0 #2f63b1;
    }
</style>